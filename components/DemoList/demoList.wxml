<!--components/DemoList/demoList.wxml-->
<view class="content-list" bindtap="toDetail">
  <view class="left">
    <image  class="" src="{{content.imgurl}}" mode="aspectFill"></image>
  </view>
  <view class="right">
    <view class="right-top bg-red padding radius text-center shadow-blur">{{content.title}}</view>
    <view class="right-bottom">
      <view class="demo-tag"><van-icon name="clock-o" class="padding-right" />{{content.time}}</view>
      <view><van-icon name="chat" class="padding-right" />{{content.msg}}</view>
      <view><van-icon name="like-o" class="padding-right" />{{content.like}}</view>
      <view><van-icon name="eye-o" class="padding-right" />{{content.haslook}}</view>
    </view>
  </view>
</view>
