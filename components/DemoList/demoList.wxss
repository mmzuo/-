.content-list {
  display: flex;
  white-space: nowrap;
  background-color: #ffffff;
  margin-top: 10px;
}

.left {
  align-self: center;
  background-size: cover;
    background-position: center;
    margin-left: 15px;
}
.left image {
  width: 146rpx;
    height: 146rpx;
    font-size: 2em;
}
.right {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100px;
  margin-left: 10px;
}

.right-top {
  align-items: top;
  height: max-content;
  height: -webkit-fill-available;
  padding-top: 10px;
}

.right-bottom {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-bottom: 10px;
  margin-right: 15px;
}
.demo-tag {
  display: flex;
  align-items: center;
}
.padding-right {
  padding-right: 5px;
}